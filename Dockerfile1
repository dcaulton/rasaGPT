FROM rasa/rasa
USER root
RUN apt-get -y update && apt-get -y install \
  build-essential \
  python3-dev

ARG rpath=/rasaGPT
ENV SQLALCHEMY_SILENCE_UBER_WARNING=1 
RUN rm -Rf /mnt/www
WORKDIR $rpath
COPY . $rpath
#RUN echo '============================================='
#RUN ["ls", "/rasaGPT"]
#RUN ls \/rasaGPT
RUN pip install --upgrade pip
RUN pip install -r requirements.txt --no-cache-dir

EXPOSE 8000
EXPOSE 5055
 
CMD ['/rasaGPT/Docker_runscript1']
#CMD ['rasa' 'run' '--cors' '"*"']
